extends ../../layouts/ui-kit-layout
include ../../components/heading/heading.pug
include ../../components/text-field/text-field.pug
include ../../components/dropdown/dropdown.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/filter-date-dropdown/filter-date-dropdown.pug
include ../../components/checkbox-list/checkbox-list.pug
include ../../components/radio-buttons/radio-buttons.pug
include ../../components/toggle/toggle.pug
include ../../components/like-button/like-button.pug
include ../../components/rate-button/rate-button.pug
include ../../components/range-slider/range-slider.pug
include ../../components/button/button.pug
include ../../components/pagination/pagination.pug
include ../../components/bullet-items/bullet-items.pug
include ../../components/dignity/dignity.pug
include ../../components/review/review.pug

block variables
  - const pageTitle = "Form & Elements"

block content
  main.form-elements
    .form-elements__container
      section.form-elements__text-fields-buttons
        .form-elements__text-fields
          .form-elements__large-wrapper
            +heading({ 
              level: "h3", 
              title: "text field", 
              description: "default" 
              })
            +text-field({
              type: "text", 
              placeholder: "Email", 
              name: "email",
            })

          .form-elements__large-wrapper
            +heading({ 
              level: "h3", 
              title: "text field", 
              description: "hover/focus", 
              })
            +text-field({
              type: "text", 
              placeholder: "This is pretty awesome", 
              name: "email",
              focused: true,
            })

          .form-elements__large-wrapper
            +heading({ 
              level: "h3", 
              title: "dropdown",
            })
            +dropdown({
              id: "text-field-dropdown",
              isOpen: false,
              hasButtons: true,
              type: "not-guests",
              placeholder: "Сколько гостей",
              maxCount: 10,
              elements: [
                { title: "Взрослые", id: "adult", startCount: 0 }, 
                { title: "Дети", id: "kids", startCount: 0 }, 
                { title: "Младенцы", id: "baby", startCount: 0 }
              ],
              plurals: {
                adult: "Взрослый, Взрослых, Взрослых",
                kids: "Ребенок, Ребенка, Детей",
                baby: "Младенец, Младенца, Младенцев",
                },
            })

          .form-elements__large-wrapper
            .form-elements__large-wrapper--extra-padding
              +heading({ 
                level: "h3", 
                title: "masked text field",
              })
              +text-field({
                type: "text", 
                placeholder: "ДД.ММ.ГГГГ", 
                name: "email",
                focused: false,
                dateMask: true,
              })

          .form-elements__large-wrapper
            .form-elements__large-wrapper--extra-padding
              +date-dropdown({
                id: "text-field-datepicker",
                type:"text",
                hasTwoInputs: true,
                hasArrow: true,
                inline: true,
                dateFormat: "dd.MM.yyyy",
                startTitle: "date dropdown",
                endTitle: "date dropdown",
                placeholderStart: "ДД.ММ.ГГГГ",
                placeholderEnd: "19.08.2019",
                name: "date",
                startDate: "08.10.2019",
                endDate: "08.19.2019",
                withMask: true
              })

          .form-elements__medium-wrapper
            .form-elements__medium-wrapper--extra-padding
              +filter-date-dropdown({
                id: "filter-text-field-datepicker",
                type:"text",
                hasArrow: true,
                dateFormat: "dd.MM.yyyy",
                title: "filter date dropdown",
                placeholder: "ДД.ММ.ГГГГ",
                name: "date",
                startDate: "08.10.2019",
                endDate: "08.19.2019",
                withMask: true,
                datesSeparator: " - "
              })
          .form-elements__medium-wrapper
            +heading({ 
              level: "h3", 
              title: "SUBSCRIPTION TEXT FIELD",
            })
            +text-field({
              type: "text", 
              placeholder: "Email", 
              name: "email",
              focused: false,
              hasArrowSubscription: true,
            })
        .form-elements__checkboxes
          .form-elements__small-wrapper
            +heading({ 
              level: "h3", 
              title: "CHECKBOX BUTTONS",
            })
            +checkbox-list({	
              id: "checkbox-list",
              listItems: [
                { title: "Можно курить", name: 'smoke-allow' },
                { title: "Можно с питомцами", name: 'pets-allow' },
                { title: "Можно пригласить гостей (до 10 человек)", name: 'guests-allow', checked: true }
              ],
            })
          .form-elements__small-wrapper
            +heading({ 
              level: "h3", 
              title: "Radio Buttons"
            })
            +radio-buttons({	
              name: "gender",
              type: "radio",
              inline: true,
              listItems: [
                { title: "Мужчина", id: "gender-f", checked: "checked" },
                { title: "Женщина", id: "gender-m" },
              ],
            })
          .form-elements__large-wrapper
            +heading({ 
              level: "h3", 
              title: "Toggle",
            })
            +toggle({	
              name: "special-offer",
              type: "checkbox",
              inline: false,
              listItems: [
                { title: "Получать спецпредложения", id: "special-offer1", checked: "checked" },
                { title: "Получать спецпредложения", id: "special-offer2" },
              ],
            })
          .form-elements__small-wrapper
            +heading({ 
              level: "h3", 
              title: "like button"
            })
            +like-button({	
              name: "like",
              type: "checkbox",
              inline: true,
              listItems: [
                { number: 2, id: "like-button1" },
                { number: 12, id: "like-button2", checked: "checked" },
              ],
            })
          .form-elements__medium-wrapper
            +heading({ 
              level: "h3", 
              title: "rate button",
            })
            .form-elements__medium-wrapper-couple
              +rate-button({
                id: 'rate-button1',
                maxRate: 5,
                selectedRate: 4,
              })
              +rate-button({
                id: 'rate-button2',
                maxRate: 5,
                selectedRate: 5,
              })
        .form-elements__buttons
          .form-elements__medium-wrapper
            +heading({ 
              level: "h3", 
              title: "Range Slider",
              description: "5000₽ - 10000₽" 
            })
            +range-slider({
              id: "indexjs-range-slider",
              sliderMin: 0,
              sliderMax: 15000,
              startMin: 5000,
              startMax: 10000,
            })
          .form-elements__large-wrapper
            +heading({ 
              level: "h3", 
              title: "Buttons",
            })
            .form-elements__small-wrapper-couple
              +button({
                buttonName: "click me",
                buttonType: "ButtonDefault",
                size: "small",
                isTransparentBackground: false,
                disabled: false,
              })
              +button({
                buttonName: "click me",
                buttonType: "ButtonDefault",
                size: "small",
                isTransparentBackground: false,
                disabled: true,
              })
            .form-elements__small-wrapper-couple
              +button({
                buttonName: "click me",
                buttonType: "ButtonDefault",
                size: "small",
                isTransparentBackground: true,
                disabled: false,
              })
              +button({
                buttonName: "click me",
                buttonType: "ButtonDefault",
                size: "small",
                isTransparentBackground: true,
                disabled: true,
            })
            .form-elements__small-wrapper-couple
              +button({
                buttonName: "click me",
                buttonType: "ButtonLink",
                size: "small",
                isTransparentBackground: false,
                disabled: false,
              })
              +button({
                buttonName: "click me",
                buttonType: "ButtonLink",
                size: "small",
                isTransparentBackground: false,
                disabled: true,
              })
            .form-elements__large-wrapper-couple
              +button({
                buttonName: "перейти к оплате",
                buttonType: "ButtonDefault",
                size: "large",
                hasArrow: true,
            })
          .form-elements__large-wrapper
            +heading({ 
              level: "h3", 
              title: "Pagination",
            })
            +pagination({
              id: 'pagination',
              entries: 180,
              pages: 15,
            })
      section.form-elements__dropdowns
        .form-elements__dropdowns-rooms
          .form-elements__medium-wrapper
            +heading({ 
              level: "h3", 
              title: "dropdown", 
              description: "default"
            })
            +dropdown({
              id: "dropdowns-dropdown-default",
              isOpen: false,
              type: "guests",
              placeholder: "Сколько гостей",
              maxCount: 10,
              elements: [
                { title: "Спальни", id: "bedrooms", startCount: 0 }, 
                { title: "Кровати", id: "beds", startCount: 0 }, 
                { title: "Ванные комнаты", id: "bathrooms", startCount: 0 }
              ],
              plurals: {
                bedrooms: "спальня, спальни, спален",
                beds: "кровать, кровати, кроватей",
                bathrooms: "ванная комната, ванные комнаты, ванных комнат",
                },
            })
          .form-elements__medium-wrapper
            +heading({ 
              level: "h3", 
              title: "dropdown",
              description: "expanded"
            })
            +dropdown({
              id: "dropdowns-dropdown-expanded",
              isOpen: true,
              type: "guests",
              placeholder: "Сколько гостей",
              maxCount: 10,
              elements: [
                { title: "Спальни", id: "bedrooms", startCount: 2 }, 
                { title: "Кровати", id: "beds", startCount: 2 }, 
                { title: "Ванные комнаты", id: "bathrooms", startCount: 0 }
              ],
              plurals: {
                bedrooms: "спальня, спальни, спален",
                beds: "кровать, кровати, кроватей",
                bathrooms: "ванная комната, ванные комнаты, ванных комнат",
                },
            })
        .form-elements__dropdowns-guests-clear
          .form-elements__large-wrapper
            +heading({ 
              level: "h3", 
              title: "dropdown",
            })
            +dropdown({
              id: "dropdowns-dropdown-guests-no-value",
              isOpen: true,
              hasButtons: true,
              type: "not-guests",
              placeholder: "Сколько гостей",
              maxCount: 10,
              elements: [
                { title: "Взрослые", id: "adult", startCount: 0 }, 
                { title: "Дети", id: "kids", startCount: 0 }, 
                { title: "Младенцы", id: "baby", startCount: 0 }
              ],
              plurals: {
                adult: "Взрослый, Взрослых, Взрослых",
                kids: "Ребенок, Ребенка, Детей",
                baby: "Младенец, Младенца, Младенцев",
                },
            })
        .form-elements__dropdowns-guests
          .form-elements__large-wrapper
            +heading({ 
              level: "h3", 
              title: "dropdown",
            })
            +dropdown({
              id: "dropdowns-dropdown-guests-with-value",
              isOpen: true,
              hasButtons: true,
              type: "not-guests",
              placeholder: "Сколько гостей",
              maxCount: 10,
              elements: [
                { title: "Взрослые", id: "adult", startCount: 2 }, 
                { title: "Дети", id: "kids", startCount: 1 }, 
                { title: "Младенцы", id: "baby", startCount: 0 }
              ],
              plurals: {
                adult: "Взрослый, Взрослых, Взрослых",
                kids: "Ребенок, Ребенка, Детей",
                baby: "Младенец, Младенца, Младенцев",
                },
            })
      section.form-elements__lists
        .form-elements__lists-checkboxes-lists
          .form-elements__medium-wrapper
            +checkbox-list({	
              title: "EXPANDABLE CHECKBOX LIST",
              isDropdown: true,
              isOpen: false,
              id: "checkbox-list-expandable-close",
              listItems: [
                { title: "Завтрак", name: 'breakfast' },
                { title: "Письменный стол", name: 'desk', checked: true },
                { title: "Стул для кормления", name: 'table', checked: true },
                { title: "Кроватка", name: 'bed', checked: true },
                { title: "Телевизор", name: 'tv'},
                { title: "Шампунь", name: 'shampoo'},
                { title: "Телевизор", name: 'tv2'},
                { title: "Шампунь", name: 'shampoo2'},
              ],
            })
          .form-elements__medium-wrapper
            +checkbox-list({	
              title: "EXPANDABLE CHECKBOX LIST",
              isDropdown: true,
              isOpen: true,
              id: "checkbox-list-expandable-open",
              listItems: [
                { title: "Завтрак", name: 'breakfast' },
                { title: "Письменный стол", name: 'desk', checked: true },
                { title: "Стул для кормления", name: 'table', checked: true },
                { title: "Кроватка", name: 'bed', checked: true },
                { title: "Телевизор", name: 'tv'},
                { title: "Шампунь", name: 'shampoo'},
                { title: "Телевизор", name: 'tv2'},
                { title: "Шампунь", name: 'shampoo2'},
              ],
            })
        .form-elements__lists-checkboxes-rich-list
          .form-elements__medium-wrapper
            +heading({ 
              level: "h3", 
              title: "RICH CHECKBOX BUTTONS",
            })
            +checkbox-list({	
              title: "RICH CHECKBOX BUTTONS",
              isOpen: true,
              id: "checkbox-list-rich",
              richListItems: [
                { title: "Широкий коридор", description: "Ширина коридоров в номере не менее 91 см.", name: 'corridor', checked: true },
                { title: "Помощник для инвалидов", description: "На 1 этаже вас встретит специалист и проводит до номера.", name: 'helper' },
              ],
            })
        .form-elements__lists-checkboxes-bullet-list
          .form-elements__medium-wrapper
            +heading({ 
              level: "h3", 
              title: "bullet list",
            })
            +bullet-items({
              listItems: [
                { title: "Нельзя с питомцами"},
                { title: "Без вечеринок и мероприятий"},
                { title: "Время прибытия — после 13:00, а выезд до 12:00"},
              ]
            })
      section.form-elements__feedback
        .form-elements__grade
          .form-elements__medium-wrapper
            +dignity({
              materialIconsCode: "insert_emoticon",
              title: "Комфорт",
              description: "Шумопоглощающие стены",
            })
            +dignity({
              materialIconsCode: "location_city",
              title: "Удобство",
              description: "Окно в каждой из спален",
            })
        .form-elements__review
          .form-elements__extra-large-wrapper
            +review({
              jpgSrc: "murad_sarafanov",
              numberLikeButton: 12,   
              checkedLikeButton: "checked",  
              idLikeButton: "feedback-like-button", 
              nameLikeButton: "feedback-like-button", 
              typeLikeButton: "checkbox",
              namePerson: "Мурад Сарафанов",
              statusPerson: "5 дней назад",
              description: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
            })