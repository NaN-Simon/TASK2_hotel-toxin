include ../../components/heading/heading.pug
include ../../components/text-field/text-field.pug
include ../../components/dropdown/dropdown.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/checkbox-list/checkbox-list.pug
include ../../components/radio-buttons/radio-buttons.pug

block content
  main.form-elements
    .form-elements__container
      section.form-elements__text-fields-buttons
        .form-elements__text-fields
          .form-elements__text-field-wrapper
            +heading({ 
              level: "h3", 
              title: "text field", 
              description: "default" 
              })
            +text-field({
              type: "text", 
              placeholder: "Email", 
              name: "email",
            })
          .form-elements__text-field-wrapper
            +heading({ 
              level: "h3", 
              title: "text field", 
              description: "hover/focus", 
              })
            +text-field({
              type: "text", 
              placeholder: "This is pretty awesome", 
              name: "email",
              focused: true,
            })
          .form-elements__text-field-wrapper
            +heading({ 
              level: "h3", 
              title: "dropdown",
            })
            +dropdown({
              id: "text-field-dropdown",
              isOpen: false,
              type: "guests1",
              placeholder: "Сколько гостей",
              maxCount: 10,
              elements: [
                { title: "Взрослые", id: "adult", startCount: 5 }, 
                { title: "Дети", id: "kids", startCount: 3 }, 
                { title: "Младенцы", id: "baby", startCount: 1 }
              ],
              plurals: {
                adult: "Взрослый, Взрослых, Взрослых",
                kids: "Ребенок, Ребенка, Детей",
                baby: "Младенец, Младенца, Младенцев",
                },
            })
          .form-elements__text-field-wrapper
            +heading({ 
              level: "h3", 
              title: "masked text field",
            })
            +text-field({
              type: "text", 
              placeholder: "ДД.ММ.ГГГГ", 
              name: "email",
              focused: false,
              dateMask: true,
            })
          .form-elements__text-field-wrapper
            +date-dropdown({
              id: "text-field-datepicker",
              type:"text",
              hasTwoInputs: true,
              hasArrow: true,
              inline: true,
              dateFormat: "dd.MM.yyyy",
              startTitle: "date dropdown",
              endTitle: "date dropdown",
              placeholderStart: "ДД.ММ.ГГГГ",
              placeholderEnd: "19.08.2019",
              name: "date",
              startDate: "08.10.2019",
              endDate: "08.19.2019",
              withMask: true
            })
        .form-elements__text-checkboxes
          .form-elements__text-checkboxes-wrapper
            +heading({ 
              level: "h3", 
              title: "CHECKBOX BUTTONS",
            })
            +checkbox-list({	
              listItems: [
                { title: "Можно курить", name: 'smoke-allow' },
                { title: "Можно с питомцами", name: 'pets-allow' },
                { title: "Можно пригласить гостей (до 10 человек)", name: 'guests-allow', checked: true }
              ],
            })
          .form-elements__text-checkboxes-wrapper
            +heading({ 
              level: "h3", 
              title: "Radio Buttons"
            })
            +radio-buttons({	
              name: "gender",
              type: "radio",
              inline: true,
              listItems: [
                { title: "Мужчина", id: "gender-f", checked: "checked"},
                { title: "Женщина", id: "gender-m"},
              ],
            })