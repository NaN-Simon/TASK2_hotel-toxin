include ../../components/image/image.pug
include ../../components/item-list/item-list.pug
include ../../components/text-field/text-field.pug

mixin footer(properties = {})

  -
    const {
      headerLogo = {},
      footerDescription = "default",
      itemListNav = {},
      itemListAbout = {},
      itemListSupport = {},
      itemListSub = {},
      socialImage1 = {},
      socialImage2 = {},
      socialImage3 = {},
    } = properties

  .footer
    .footer__wrapper
      .footer__booking
        .footer__booking-logo
          +image-png(headerLogo)
        p.footer__booking-description #{footerDescription}
      .footer__navigation 
        .footer__navigation-nav
          +item-list(itemListNav)
        .footer__navigation-about
          +item-list(itemListAbout)
        .footer__navigation-support
          +item-list(itemListSupport)
      .footer__navigation-sub
        +item-list(itemListSub)
        +text-field({
          type: "text", 
          placeholder: "Email", 
          name: "email",
          focused: false,
          hasArrowSubscription: true,
        })
    .footer__wrapper
      span.footer__copyright-text Copyright © 2018 Toxin отель. Все права защищены.
      .footer__social
        +image-svg(socialImage1)
        +image-svg(socialImage2)
        +image-svg(socialImage3)

mixin footer-small(properties = {})

  -
    const {
      headerLogo = {},
      socialImage1 = {},
      socialImage2 = {},
      socialImage3 = {},
    } = properties

  .footer__small
    .footer__small-logo
      +image-png(headerLogo)
    span.footer__small-copyright-text Copyright © 2018 Toxin отель. Все права защищены.
    .footer__small-social
      +image-svg(socialImage1)
      +image-svg(socialImage2)
      +image-svg(socialImage3)