include ../text-field/text-field.pug
include ../heading/heading.pug

mixin date-dropdown(properties = {})
  -
    const {
      type = "",
      isOpen = false,
      isHideInput = false,
      hasTwoInputs = false,
      hasArrow = false,
      inline =  false,
      dateFormat =  "",
      startTitle = "",
      endTitle = "",
      placeholderStart = "",
      placeholderEnd = "",
      name = "",
      startDate = "",
      endDate = "",
      withMask = false,
    } = properties

    const inlineClassModifire = inline ? "date-dropdown__inline" : ""
    const dataProperties = JSON.stringify(properties)

  if hasTwoInputs 
    section.date-dropdown.date-dropdown-js(data-properties = dataProperties, id = id)
      .date-dropdown__couple&attributes({
      class: [inlineClassModifire],
    })
        .date-dropdown__start
          +heading({ 
            level: "h3", 
            title: startTitle,
          })
          +text-field({
            type: type, 
            hasArrow: hasArrow,
            placeholder: placeholderStart, 
            name: name,
            dateMask: withMask,
          })
        .date-dropdown__end
          +heading({ 
            level: "h3", 
            title: endTitle,
          })
          +text-field({
            type: type, 
            hasArrow: hasArrow,
            placeholder: placeholderEnd, 
            name: name,
            dateMask: withMask,
          })
  else 
    section.date-dropdown.date-dropdown-js(data-properties = dataProperties, id = id)
      .date-dropdown__couple&attributes({
      class: [inlineClassModifire],
    })
        .date-dropdown__start
          +heading({ 
            level: "h3", 
            title: startTitle,
          })
          +text-field({
            type: type, 
            hasArrow: hasArrow,
            placeholder: placeholderStart, 
            name: name,
            dateMask: withMask,
          })